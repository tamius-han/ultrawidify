{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./ts-out",
    "allowJs": true,
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "types": [
      "chrome",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@src/*": [ "*" ],
      "@/*": [ "*" ]
    }
  },
  "include": [ "./src/**/*" ],
}
